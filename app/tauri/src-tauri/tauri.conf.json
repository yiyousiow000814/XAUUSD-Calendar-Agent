{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XAUUSD Calendar Agent",
  "version": "0.2.0",
  "identifier": "com.xauusd.calendar.agent",
  "build": {
    "beforeDevCommand": "npm --prefix ../webui run dev -- --host",
    "beforeBuildCommand": "npm --prefix ../webui run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../webui/dist"
  },
  "app": {
    "trayIcon": {
      "id": "main",
      "iconPath": "../../assets/xauusd.ico",
      "tooltip": "XAUUSD Calendar Agent",
      "showMenuOnLeftClick": false
    },
    "windows": [
      {
        "label": "main",
        "title": "XAUUSD Calendar Agent",
        "width": 1440,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 760,
        "resizable": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-renderer-backgrounding"
      }
    ]
  },
  "bundle": {
    "active": true,
    "resources": [
      "resources/seed-repo/**/*"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "installer_hooks.nsh"
      }
    },
    "icon": [
      "icons/icon.png",
      "../../assets/xauusd.ico"
    ]
  }
}
